{
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",
        "lib": [
            "es2019"
        ],
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "nodes/**/*.ts",
        "credentials/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}